# YouTube Viewer Configuration
# Copy this file to .env and adjust as needed

# Default YouTube URL (optional, can be overridden with --url flag)
YOUTUBE_URL=

# Default number of viewer instances (optional, can be overridden with --instances flag)
# Range: 1-10
VIEWER_INSTANCES=1

# Default minimum watch duration in seconds (optional, can be overridden with --minDuration flag)
MIN_DURATION=60

# Default maximum watch duration in seconds (optional, can be overridden with --maxDuration flag)
MAX_DURATION=300

# Run in headless mode by default (optional, can be overridden with --headless flag)
# true or false
HEADLESS=true

# Enable channel browsing mode (optional, can be overridden with --browseChannel flag)
# true or false
BROWSE_CHANNEL=false

# Maximum number of videos to watch per instance when in channel browsing mode
# (optional, can be overridden with --maxVideos flag)
MAX_VIDEOS=5

# Use proxy API instead of proxies.txt file (optional, can be overridden with --proxyApi flag)
# true or false
PROXY_API=false

# URL for proxy API (optional, can be overridden with --proxyApiUrl flag)
PROXY_API_URL=https://proxylist.geonode.com/api/proxy-list?country=ID&protocols=http&limit=10&page=1&sort_by=lastChecked&sort_type=desc

# Verify proxies are working before using them (optional, can be overridden with --verifyProxies flag)
# true or false
VERIFY_PROXIES=true

# Use faster but less accurate proxy verification (optional, can be overridden with --fastProxyCheck flag)
# true or false
FAST_PROXY_CHECK=false

# Allow direct connection without proxy if all proxies fail (optional, can be overridden with --allowDirectConnection flag)
# true or false
ALLOW_DIRECT_CONNECTION=true

# Include Shorts videos when browsing a channel (optional, can be overridden with --includeShorts flag)
# true or false
INCLUDE_SHORTS=true

# Include regular videos when browsing a channel (optional, can be overridden with --includeRegular flag)
# true or false
INCLUDE_REGULAR=true

# Include Live/Stream videos when browsing a channel (optional, can be overridden with --includeLive flag)
# true or false
INCLUDE_LIVE=true 